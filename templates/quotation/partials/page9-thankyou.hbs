<!-- Page 9: Thank You Page -->
<div class="page thankyou-page">
  <!-- Logo Header -->
  <div class="thankyou-logo-header">
    <img src="{{logoImage}}" alt="Solar Earth" class="thankyou-logo" />
  </div>

  <!-- Thank You Title -->
  <div class="thankyou-title-section">
    <h1 class="thankyou-title">THANK YOU</h1>
    <div class="thankyou-underline"></div>
  </div>

  <!-- Thank You Message -->
  <div class="thankyou-message">
    <p>We appreciate your interest in Solar Earth Renewables and taking a step towards a brighter, more sustainable future powered by the sun!</p>
    <p class="thankyou-highlight">We look forward to partnering with you on your solar journey!</p>
  </div>

  <!-- Solar Panel Image -->
  <div class="thankyou-image" style="background-image: url('{{backgroundImage}}');">
  </div>

  <!-- Contact Us Section -->
  <div class="thankyou-contact">
    <h2 class="thankyou-contact-title">Contact Us :</h2>
    
    <div class="thankyou-contact-grid">
      <div class="thankyou-contact-item">
        <div class="thankyou-contact-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="#1a3a5c" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
        </div>
        <div class="thankyou-contact-info">
          <span class="thankyou-contact-label">Contact No.</span>
          <span class="thankyou-contact-value">{{company.phone}}</span>
        </div>
      </div>
      
      <div class="thankyou-contact-item">
        <div class="thankyou-contact-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="#1a3a5c" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
        </div>
        <div class="thankyou-contact-info">
          <span class="thankyou-contact-label">Email</span>
          <span class="thankyou-contact-value">{{company.email}}</span>
        </div>
      </div>
      
      <div class="thankyou-contact-item">
        <div class="thankyou-contact-icon">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="#1a3a5c" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="2" y1="12" x2="22" y2="12"/>
            <path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/>
          </svg>
        </div>
        <div class="thankyou-contact-info">
          <span class="thankyou-contact-label">Visit Us On</span>
          <span class="thankyou-contact-value">www.{{company.website}}</span>
        </div>
      </div>
    </div>
    
    <div class="thankyou-address">
      <div class="thankyou-contact-icon">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="24" height="24" fill="none" stroke="#1a3a5c" stroke-width="2">
          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
      </div>
      <div class="thankyou-contact-info">
        <span class="thankyou-contact-label">Address</span>
        <span class="thankyou-contact-value thankyou-address-text">C/601 Ananta Space, Jagatpur Road, Jagatpur,<br/>Ahmedabad Gujarat, India - 382470.</span>
      </div>
    </div>
  </div>
</div>
